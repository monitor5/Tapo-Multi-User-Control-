# ──────────────────────────────────────────
# 애플리케이션 환경
# ──────────────────────────────────────────
APP_ENV=development                   # development 또는 production
DEBUG=true                            # FastAPI 디버그 모드 (uvicorn --reload)

# ──────────────────────────────────────────
# 서버(uvicorn/Gunicorn) 설정
# ──────────────────────────────────────────
HOST=0.0.0.0                          # 바인딩할 주소
PORT=5000                             # 애플리케이션 포트 (docker-compose.yml 과 일치)
WORKERS=4                             # Gunicorn 워커 수

# ──────────────────────────────────────────
# 보안 및 인증 (JWT 토큰용)
# ──────────────────────────────────────────
SECRET_KEY=your-super-secret-key      # JWT 서명 등에 사용할 랜덤 문자열
ALGORITHM=HS256                       # JWT 알고리즘
ACCESS_TOKEN_EXPIRE_MINUTES=60        # 액세스 토큰 만료 시간 (분)

# ──────────────────────────────────────────
# Tapo 스마트 플러그 계정 정보
# ──────────────────────────────────────────
TAPO_EMAIL=youremail@example.com      # TP-Link Tapo 로그인 이메일
TAPO_PASSWORD=yourpassword            # TP-Link Tapo 로그인 비밀번호

# ──────────────────────────────────────────
# 플러그 장치 매핑 (콤마 구분, name:IP 포맷)
# ──────────────────────────────────────────
PLUGS=uhyun:192.168.1.100,rejae:192.168.1.101

# ──────────────────────────────────────────
# 로깅 레벨
# ──────────────────────────────────────────
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR 등
